<Window x:Class="PackageManager.Views.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Log" Height="500" Width="700" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" Icon="{StaticResource DefaultPackageIcon}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Padding="8" Background="{StaticResource BackgroundBrush}">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="Clear" Content="Clear" Click="Clear_Click" />
                <Button x:Name="GoToBottom" Content="Go to bottom" Margin="8,0,0,0" Click="GoToBottom_Click" />
            </StackPanel>
        </Border>

        <TextBox x:Name="Content" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" BorderThickness="0,1,0,0" Grid.Row="1" />
    </Grid>
</Window>
